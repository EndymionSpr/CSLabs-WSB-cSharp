using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp1
{
    class Program
    {
        static void Main(string[] args)
        {
            double a, b, c;
            while (true) { 
                a = double.Parse(Console.ReadLine());
                b = double.Parse(Console.ReadLine());
                c = double.Parse(Console.ReadLine());
                if (a - b == 0 && c == 0) { Console.WriteLine("Nie można dzielić przez 0! "); }
                else break;
                        }
            if (c > 0) Console.WriteLine(a * a + b);
            else if (c < 0) Console.WriteLine(a - b * b);
            else if (c == 0) Console.WriteLine(1 / (a - b));
            Console.ReadKey();
        }
    }
}
