using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp1
{
    class Program
    {
        static void Main(string[] args)
        {
            uint LiczbaLiczb;
            while (true)
            {
                Console.WriteLine("Podaj ilość samochodów");
                if (uint.TryParse(Console.ReadLine(), out LiczbaLiczb)) break;
                else Console.WriteLine("Nie poprawna liczba");
            }
            string[] Tablica = new string[LiczbaLiczb];
            for(int i = 0; i < Tablica.Length; i++)
            {
                Console.WriteLine("Podaj marke, model i rok produkcji oddzielone średnikami: xx;xx;xx");
                Tablica[i] = Console.ReadLine();
            }
        }
    }
}
